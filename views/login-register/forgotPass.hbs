<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link  rel="icon"   href="/images/icons/favicon.png" type="image/png" />
    <title>Contract Manager</title>
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/login-register.css">
</head>
<body>

<form class="bg-register-login login-container" action="/forgotPassword" method="POST"> 
    <h1 class="black">Reset Password</h1>
    <p class=" forgot-password" style="text-align: center; margin-left:20px; margin-right:20px;">Insert your email and we will send you a link to reset your password.</p>
    <br>
    <input type="email" placeholder="Your email here" name="email"  value="{{#if formData.email}}{{formData.email}}{{/if}}">
    <button class="btn btn-blue" type="submit">Send reset password email</button>

    <!-- verification messages -->
    {{#if successMsg}}
    <div class="success-message">{{successMsg}}</div>
    
    {{/if}}
    {{#if errorMsg}}
        <div class="error-message">{{errorMsg}}</div>
    {{/if}}

    <!-- register section -->
    <div class="devided-block">
        <div class="devided"></div>
        <span>or</span>
        <div class="devided"></div>
    </div>

    <a class="create-account-link" href="/">Go to login</a>
</form>
<script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>
</body>
</html>